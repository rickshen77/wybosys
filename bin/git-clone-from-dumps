#!/usr/bin/env python3

import sys
import json
import os


def isgit(dir) -> bool:
    return os.path.exists(dir + '/.git')


def clone(dump: str, domain, target):
    if dump.startswith('/'):
        dump = dump[1:]
    target_git = target + '/' + dump
    if isgit(target_git):
        print('更新 ' + dump)
        old = os.getcwd()
        os.chdir(target_git)
        cmd = 'git pull'
        os.system(cmd)
        # print(cmd)
        os.chdir(old)
    else:
        print('clone ' + dump)
        gitnm = os.path.basename(target_git)
        gitdir = os.path.dirname(target_git)
        if not os.path.isdir(gitdir):
            os.makedirs(gitdir)
        old = os.getcwd()
        os.chdir(gitdir)
        if domain.startswith('http'):
            cmd = 'git clone ' + domain + '/' + dump + '.git ' + gitnm
        else:
            cmd = 'git clone git@' + domain + ':' + dump + '.git ' + gitnm
        # print(gitdir)
        os.system(cmd)
        # print(cmd)
        os.chdir(old)


def clones(dumps, domain: str, target):
    if domain.endswith('/'):
        domain = domain[:1]
    for dump in dumps:
        clone(dump, domain, target)


if __name__ == "__main__":
    if len(sys.argv) != 3:
        raise Exception('usage: domain.git dumps.file')
    domain = sys.argv[1]
    dumps = json.load(open(sys.argv[2]))
    clones(dumps, domain, os.getcwd())
